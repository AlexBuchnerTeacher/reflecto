rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;

      // Journal entries: only owner, validate date format (yyyy-MM-dd)
      match /entries/{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == uid &&
          entryId.matches('^\\d{4}-\\d{2}-\\d{2}$');
      }

      // Weekly reflections: only owner, validate week format (yyyy-ww)
      match /weekly_reflections/{weekId} {
        allow read, write: if request.auth != null && request.auth.uid == uid &&
          weekId.matches('^\\d{4}-\\d{2}$');
      }

      // Habits: only owner can CRUD their habits
      match /habits/{habitId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }

      // Meals: only owner, validate date format (yyyy-MM-dd)
      match /meals/{mealId} {
        allow read, write: if request.auth != null && request.auth.uid == uid &&
          mealId.matches('^\\d{4}-\\d{2}-\\d{2}$');
      }
    }

    // Habit templates: read-only for authenticated users
    match /habit_templates/{templateId} {
      allow read: if request.auth != null;
      allow write: if false; // Admin-only via console
    }
  }
}
